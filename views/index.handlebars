    <div class="panel-heading">
      <h3>Holly Rolly Burgers Menu!</h3>
    </div>
    <div class="panel-body">
    <ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

    </div>
  </div>
      
</div>

